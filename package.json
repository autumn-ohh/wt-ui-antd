{
    "name": "@wt/wt-ui-antd",
    "version": "1.0.0",
    "author": "xkloveme <xkloveme@gmail.com>",
    "private": false,
    "license": "ISC",
    "main": "dist/WTUI.common.js",
    "unpkg": "dist/WTUI.umd.min.js",
    "files": [
        "dist/*",
        "index.js",
        "src/*"
    ],
    "keywords": [
        "vue",
        "vue-component",
        "components",
        "ui"
    ],
    "description": "a lightweight ui for vue2.x",
    "scripts": {
        "dev": "vue-cli-service serve --open ./examples/main.js",
        "build": "vue-cli-service build --target lib --name WTUI ./packages/index.js",
        "dev:docs": "vuepress dev docs",
        "build:docs": "vuepress build docs",
        "docs": "bash ./update-docs.sh",
        "commit": "git add -A && git-cz",
        "release:lib": "release-it",
        "release:docs": "npm run build:docs && gh-pages -d docs/.vuepress/dist",
        "publish:npm": "git add -A && npm run build && release-it",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
        "test": "vue-cli-service test:unit",
        "lint": "vue-cli-service lint"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "packages/**/*.{vue,ts,tsx,js,jsx,json}": [
            "prettier --write",
            "npm run lint"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release v${version}",
            "requireCleanWorkingDir": false
        }
    },
    "dependencies": {
        "dayjs": "^1.10.4",
        "echarts": "^5.1.1",
        "highlight.js": "^9.15.8",
        "material-design-icons": "^3.0.1",
        "popper.js": "^1.15.0",
        "sass-loader": "^11.1.1",
        "style-resources-loader": "^1.3.3",
        "vue": "2.6.12",
        "vuepress": "^1.8.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@vue/cli-plugin-babel": "^3.0.3",
        "@vue/cli-plugin-eslint": "^3.0.3",
        "@vue/cli-plugin-unit-jest": "^3.8.0",
        "@vue/cli-service": "^3.0.3",
        "@vue/test-utils": "1.0.0-beta.29",
        "@vusion/md-vue-loader": "1.0.2",
        "ant-design-vue": "^1.7.5",
        "babel-core": "7.0.0-bridge.0",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^23.6.0",
        "chalk": "^2.4.2",
        "commitizen": "^4.0.4",
        "conventional-changelog-cli": "^2.0.31",
        "cz-conventional-changelog": "^3.1.0",
        "eslint": "^5.8.0",
        "eslint-plugin-vue": "^5.0.0-0",
        "gh-pages": "^2.0.1",
        "husky": "^1.2.1",
        "lint-staged": "^10.1.2",
        "nprogress": "^0.2.0",
        "prettier": "^1.15.3",
        "release-it": "^12.4.3",
        "shelljs": "^0.8.3",
        "vue-jest": "^3.0.4",
        "vue-router": "^3.0.7",
        "vue-template-compiler": "2.6.12",
        "vuepress-plugin-leo-demo-block": "0.1.1",
        "vuepress-theme-antdocs": "^1.3.4"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "eslint:recommended"
        ],
        "rules": {
            "no-console": "off",
            "no-unused-vars": "off"
        },
        "parserOptions": {
            "parser": "babel-eslint"
        }
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ]
}
